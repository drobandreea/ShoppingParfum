<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingParfum.LoginPage"
             Title="LoginPage">
    <ContentPage.Content>
        <Grid>
            <Image Source="bg.png" VerticalOptions="Fill" Aspect="Fill"/>
            <Grid HorizontalOptions="Center" VerticalOptions="Center" Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="User Name" FontSize="17" FontAttributes="Bold" TextColor="#2c363c"/>
                <Frame Grid.Row="1" Grid.Column="0" HeightRequest="50">
                    <Entry TextColor="Black" HeightRequest="48" WidthRequest="200"/>
                </Frame>
                <Label Grid.Row="2"  Text="Password" FontSize="17" FontAttributes="Bold" TextColor="#2c363c"/>
                <Frame Grid.Row="3" HeightRequest="50">
                    <Entry TextColor="Black" IsPassword="True" HeightRequest="48" WidthRequest="200"/>
                </Frame>
                <Grid Grid.Row="4" Padding="0,40,0,0">
                    <VerticalStackLayout Spacing="20">
                        <Button Text="Login" TextColor="White" HeightRequest="40" WidthRequest="100" BackgroundColor="#2c363c"/>
                        <Button Text="Register" TextColor="White" HeightRequest="40" WidthRequest="100" BackgroundColor="#2c363c"/>

                    </VerticalStackLayout>
                </Grid>


            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>